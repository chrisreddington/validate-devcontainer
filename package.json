{
  "name": "validate-devcontainer",
  "description": "Validate Dev Container Configuration",
  "version": "0.0.0",
  "author": "Chris Reddington",
  "type": "module",
  "homepage": "https://github.com/chrisreddington/validate-devcontainer",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chrisreddington/validate-devcontainer.git"
  },
  "bugs": {
    "url": "https://github.com/chrisreddington/validate-devcontainer/issues"
  },
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "exports": {
    ".": "./dist/index.js"
  },
  "engines": {
    "node": ">=21"
  },
  "scripts": {
    "bundle": "npm run format:write && npm run package",
    "ci-test": "vitest run",
    "coverage": "npx make-coverage-badge --output-path ./badges/coverage.svg",
    "format:write": "npx prettier --write .",
    "format:check": "npx prettier --check .",
    "lint": "npx eslint . -c ./.github/linters/eslint.config.mjs",
    "local-action": "npx local-action . src/main.ts .env",
    "package": "npx rimraf ./dist && npx rollup --config rollup.config.ts --configPlugin @rollup/plugin-typescript",
    "package:watch": "npm run package -- --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "all": "npm run format:write && npm run lint && npm run test -- --coverage && npm run coverage && npm run package"
  },
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^3.0.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.3",
    "@eslint/js": "^10.0.1",
    "@github/local-action": "^7.0.0",
    "@types/node": "^25.2.3",
    "@typescript-eslint/eslint-plugin": "^8.56.0",
    "@typescript-eslint/parser": "^8.56.0",
    "@rollup/plugin-commonjs": "^29.0.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-typescript": "^12.3.0",
    "rimraf": "^6.1.3",
    "rollup": "^4.57.1",
    "@vitest/coverage-v8": "^4.0.15",
    "eslint": "^10.0.0",
    "eslint-plugin-jsonc": "^2.21.1",
    "eslint-plugin-prettier": "^5.5.4",
    "@vitest/eslint-plugin": "^1.0.0",
    "globals": "^17.3.0",
    "make-coverage-badge": "^1.2.0",
    "prettier": "^3.7.4",
    "prettier-eslint": "^16.4.2",
    "typescript": "^5.9.3",
    "vitest": "^4.0.10"
  }
}
